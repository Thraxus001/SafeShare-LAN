{
    "name": "safeshare-lan",
    "version": "1.0.0",
    "description": "Secure Local LAN File Transfer",
    "author": "SafeShare User",
    "private": true,
    "main": "main.js",
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron . --dev\"",
        "package-win": "electron-builder --win",
        "package-mac": "electron-builder --mac",
        "package-linux": "electron-builder --linux"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "concurrently": "^8.2.2",
        "electron": "^25.0.0",
        "electron-builder": "^24.6.4",
        "wait-on": "^7.0.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "homepage": "./",
    "build": {
        "extends": null,
        "extraMetadata": {
            "main": "main.js"
        },
        "appId": "com.safeshare.app",
        "productName": "SafeShare",
        "directories": {
            "output": "dist"
        },
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "package.json",
            "main.js",
            "preload.js",
            "networkManager.js"
        ],
        "mac": {
            "category": "public.app-category.utilities"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}